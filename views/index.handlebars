<div class="container">
  <div class="jumbotron bg-dark">
  <img src="https://cdn.clipart.email/4f1ccad446e29b034f00fbce97550602_modern-tv-clipart-png_9502-6181.png" width="40%"
    alt="Modern Television Clipart Png" id="logo">
  <h1 class="display-4 logo-text" id="app-title">Binge List </h1>
  <p class="lead logo-subtext">All the shows that need to be binged</p>
</div>


  <div class="row">
    <h2>New Show to Binge</h2>
  </div>
  <div class="row"></div>
    <form class="create-form">

      <div class="form-group">
        <label for="show">Show Name:</label>
        <input type="text" id="showAdd" name="name">
      </div>
      <button class="btn btn-sm btn-secondary" id="add">Add Show</button>
    </form>
  </div>

<br />
<div class="row">
  <div class="col-sm-4">
    <H2>Needs Binging</H2>
  </div>
  <div class="offset-4 col-sm-4">
    <H2>Thoroughly Binged</H2>
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    {{#each shows}}
    {{#unless isbinged}}
    {{> shows/show-block isbinged=1}}
    {{/unless}}

    {{/each}}

  </div>
  <div class="col-lg-6">
    {{#each shows}}
    {{#if isbinged}}
    {{> shows/show-block isbinged=0}}
    {{/if}}

    {{/each}}

  </div>
</div>
</div>